<h1>Editing Book</h1>
<div class ="edit-book">
    <%= form_with model: @book do |f| %>
        <h4>Title</h4>
        <%= f.text_field :title %>
        
        <div class = field>
            <h4>Body</h4>
            <%= f.text_area :body %>
        </div>
        
        <%= f.submit 'Update Book' %>
        
    <% end %>
</div>
